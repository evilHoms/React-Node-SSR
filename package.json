{
  "name": "ssr-react-boilerplate",
  "version": "1.0.0",
  "description": "React Nodejs SSR boilerplate",
  "main": "app/server.js",
  "author": "itsiva",
  "license": "MIT",
  "dependencies": {
    "babel-preset-react-hmre": "^1.1.1",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.5.3",
    "react-router-dom": "^4.3.1",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.14",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "start:server:dev": "rm -rf ./build && NODE_ENV=development webpack --mode=development --config webpack/webpack.config.server.js",
    "start:client:dev": "NODE_ENV=development webpack-dev-server --mode=development --config webpack/webpack.config.client.js",
    "start": "rm -rf ./.build && npm-run-all --parallel start:server:dev start:client:dev",
    "build:server:prod": "NODE_ENV=production webpack --mode=production --config webpack/webpack.config.server.js",
    "build:client:prod": "NODE_ENV=production webpack --mode=production --config webpack/webpack.config.client.js",
    "build": "rm -rf ./production && npm-run-all --parallel build:server:prod build:client:prod"
  }
}
